<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
 PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
  <mapper namespace="products">
  	<select id="all_list" resultType="ProductsVO">
  		SELECT * FROM products
  	</select>
  	<select id="category" resultType="CategoryVO">
  		SELECT * FROM categories
  	</select>
  	<select id="category_products" parameterType="String" resultType="ProductsVO">
  		SELECT * FROM products WHERE category_id = #{category} AND is_active = 1
  	</select>
  	
  </mapper>